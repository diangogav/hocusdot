#!/usr/bin/env zsh

if exists n; then
    echo "âœ¨ node package manager n already installed..."
else
    echo "ðŸ”§ Installing node package manager n "
    curl -L https://raw.githubusercontent.com/tj/n/master/bin/n -o n --silent
    sudo bash n lts 2>&1 /dev/null
    # Now node and npm are available
    sudo npm install -g n --silent
    echo "âœ¨ node package manager n already installed..."
fi
