#!/usr/bin/env zsh

echo "üîç Verificando modernizaci√≥n de Git...\n"

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

check_command() {
  if command -v $1 &> /dev/null; then
    echo "${GREEN}‚úì${NC} $1 instalado"
    return 0
  else
    echo "${RED}‚úó${NC} $1 NO instalado"
    return 1
  fi
}

echo "üì¶ Verificando herramientas:"
check_command "delta"
check_command "lazygit"

echo "\n‚öôÔ∏è  Verificando configuraci√≥n global:"
if git config --global --get include.path | grep -q "git/gitconfig"; then
  echo "${GREEN}‚úì${NC} Configuraci√≥n global vinculada correctamente"
else
  echo "${RED}‚úó${NC} Configuraci√≥n global NO vinculada"
fi

if git config --global --get core.pager | grep -q "delta"; then
  echo "${GREEN}‚úì${NC} Delta configurado como pager"
else
  echo "${YELLOW}‚ö†${NC}  Delta no parece ser el pager por defecto (puede estar en el include)"
fi

echo "\nüöÄ Pr√≥ximos pasos:"
echo "1. Usa ${YELLOW}git diff${NC} para ver los nuevos diffs con Delta"
echo "2. Ejecuta ${YELLOW}lg${NC} o ${YELLOW}lazygit${NC} para abrir la interfaz visual"
echo "3. Usa ${YELLOW}git l${NC} para ver el log gr√°fico mejorado"

echo "\n‚ú® ¬°Git modernizado!"
