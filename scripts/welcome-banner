echo -e "${NC}"

# System Info
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${GREEN}ğŸ“… $(date '+%A, %B %d, %Y - %H:%M:%S')${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

# Quick Stats
if [[ -d ~/.dotfiles ]]; then
  SCRIPTS_COUNT=$(find ~/.dotfiles/scripts -type f -executable 2>/dev/null | wc -l)
  echo -e "${YELLOW}ğŸ“œ Scripts available: $SCRIPTS_COUNT${NC}"
fi

if command -v git &>/dev/null && [[ -d ~/.dotfiles/.git ]]; then
  LAST_COMMIT=$(cd ~/.dotfiles && git log -1 --format="%ar" 2>/dev/null)
  echo -e "${MAGENTA}ğŸ”„ Last dotfiles update: $LAST_COMMIT${NC}"
fi

# Tip of the day
TIPS=(
  "ğŸ’¡ Use 'spellbook' to browse and run your scripts"
  "ğŸ’¡ Use 'health-check' to verify your system setup"
  "ğŸ’¡ Use 'gst' for a beautiful git status"
  "ğŸ’¡ Use 'mkcd <dir>' to create and enter a directory"
  "ğŸ’¡ Use 'extract <file>' to unpack any archive"
  "ğŸ’¡ Use 'zz' for zoxide with preview"
  "ğŸ’¡ Use 'killport <port>' to kill a process by port"
  "ğŸ’¡ Use 'bak <file>' to quickly backup a file"
  "ğŸ’¡ Use 'h' to search your command history with fzf"
  "ğŸ’¡ Use 'tldr <command>' for quick command examples"
)

RANDOM_TIP=${TIPS[$RANDOM % ${#TIPS[@]}]}
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${CYAN}$RANDOM_TIP${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo ""
